RWByteAddressBuffer Buf : register(u0);

[numthreads(1, 1, 1)]
void main(uint3 index : SV_DispatchThreadID)
{
	uint result = 0;

	// Simple loop with a break.
	[loop]
	for (uint i = 0; i < index.z; i++)
	{
		uint val = Buf.Load(4 * i);
		if (val == 30)
			break;
		result += val;
	}
	Buf.Store(0, result);
}
